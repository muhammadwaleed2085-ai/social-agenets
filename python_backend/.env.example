# ==============================================================================
# ENVIRONMENT CONFIGURATION - Production Ready
# ==============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# ENVIRONMENT & URLS (CRITICAL FOR OAUTH CALLBACKS)
# ------------------------------------------------------------------------------
# Set these to your deployed URLs - DO NOT use localhost in production

# Environment: development, staging, production
ENVIRONMENT=production

# Frontend URL (where your Next.js app is deployed)
APP_URL=https://your-app.vercel.app

# Backend URL (where this Python backend is deployed)
BACKEND_URL=https://your-backend.onrender.com

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-app.vercel.app,https://your-backend.onrender.com

# ------------------------------------------------------------------------------
# SUPABASE (Required)
# ------------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ------------------------------------------------------------------------------
# AI PROVIDERS
# ------------------------------------------------------------------------------
GOOGLE_API_KEY=your-google-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GROQ_API_KEY=your-groq-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ------------------------------------------------------------------------------
# CLOUDINARY (Media Storage)
# ------------------------------------------------------------------------------
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ==============================================================================
# SOCIAL PLATFORM OAUTH CREDENTIALS
# ==============================================================================
# OAuth Callback URLs are constructed as:
#   ${BACKEND_URL}/api/v1/auth/{platform}/callback
#
# Register these callback URLs in each platform's developer console:
#   Twitter:   ${BACKEND_URL}/api/v1/auth/twitter/callback
#   Facebook:  ${BACKEND_URL}/api/v1/auth/facebook/callback
#   Instagram: ${BACKEND_URL}/api/v1/auth/instagram/callback
#   LinkedIn:  ${BACKEND_URL}/api/v1/auth/linkedin/callback
#   TikTok:    ${BACKEND_URL}/api/v1/auth/tiktok/callback
#   YouTube:   ${BACKEND_URL}/api/v1/auth/youtube/callback
# ==============================================================================

# ------------------------------------------------------------------------------
# TWITTER/X (https://developer.twitter.com)
# ------------------------------------------------------------------------------
# Callback URL: ${BACKEND_URL}/api/v1/auth/twitter/callback
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# OAuth 1.0a credentials (for media upload)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# ------------------------------------------------------------------------------
# FACEBOOK (https://developers.facebook.com)
# ------------------------------------------------------------------------------
# Callback URL: ${BACKEND_URL}/api/v1/auth/facebook/callback
# Required Permissions: pages_manage_posts, pages_read_engagement, pages_show_list
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# ------------------------------------------------------------------------------
# INSTAGRAM (https://developers.facebook.com) - Uses Facebook App
# ------------------------------------------------------------------------------
# Callback URL: ${BACKEND_URL}/api/v1/auth/instagram/callback
# Required Permissions: instagram_basic, instagram_content_publish
# Uses same credentials as Facebook (Meta Business Suite)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# ------------------------------------------------------------------------------
# LINKEDIN (https://www.linkedin.com/developers)
# ------------------------------------------------------------------------------
# Callback URL: ${BACKEND_URL}/api/v1/auth/linkedin/callback
# Required Scopes: r_liteprofile, w_member_social, r_organization_social
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ------------------------------------------------------------------------------
# TIKTOK (https://developers.tiktok.com)
# ------------------------------------------------------------------------------
# Callback URL: ${BACKEND_URL}/api/v1/auth/tiktok/callback
# Required Scopes: video.publish, user.info.basic
TIKTOK_CLIENT_ID=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# ------------------------------------------------------------------------------
# YOUTUBE (https://console.cloud.google.com)
# ------------------------------------------------------------------------------
# Callback URL: ${BACKEND_URL}/api/v1/auth/youtube/callback
# Required Scopes: youtube.upload, youtube.readonly
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# ------------------------------------------------------------------------------
# CANVA (Optional - https://www.canva.com/developers)
# ------------------------------------------------------------------------------
# Callback URL: ${BACKEND_URL}/api/v1/auth/canva/callback
CANVA_CLIENT_ID=your-canva-client-id
CANVA_CLIENT_SECRET=your-canva-client-secret

# ------------------------------------------------------------------------------
# CRON SECRET (for scheduled jobs)
# ------------------------------------------------------------------------------
# Generate a random string: openssl rand -hex 32
CRON_SECRET=your-random-cron-secret-here

# ------------------------------------------------------------------------------
# RATE LIMITING
# ------------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_AUTH_ATTEMPTS=5

# ------------------------------------------------------------------------------
# DEFAULT MODEL
# ------------------------------------------------------------------------------
DEFAULT_MODEL_ID=google-genai:gemini-2.0-flash
